@model Treinamento.Web.Models.Aluno
@using Europa.Resources

@* Carrega o arquivo JavaScript principal da página *@
<script src="~/Scripts/projeto/exercicio/exercicio.js"></script>
<script>
    @* Recebe as URLs que executam os métodos (ações) do controller da página Home *@
    Europa.Controllers.Exercicio.UrlGetAluno = '@Url.Action("GetAluno", "Exercicio")';
    Europa.Controllers.Exercicio.UrlCadastrarAluno = '@Url.Action("CadastrarAluno", "Exercicio")'
</script>

<div id="form-aluno">
    <div class="bg-danger">
        <h1>@GlobalMessages.TituloTelaExercicio</h1>
    </div>
    <div class="bg-black d-flex justify-content-end">
        <button type="button" class="btn btn-success m-1 col-md-2" onclick="AbrirModal()">Incluir</button>
        <button onclick="abrirAbaDetalhamento()">Olho Da lista</button>
    </div>
    <div class="col-md-24">
        <form class="bg-secondary">

            <div class="col-sm-6 col-md-12">
                <div class="row m-0 border border-dark border-3" id="listaAluno">
                    <div class="col-md-1 border border-dark border-3">
                        <h4 class="">Ações</h4>
                        
                        @Html.TextBoxFor(x => x.Matricula, null, new { @class = "form-control", disabled = "disabled" })
                        
                    </div>
                    <div class="col-md-1 border border-dark border-3">
                        <h4 class="">Nome</h4>
                    </div>
                    <div class=" col-md-2 border border-dark border-3">
                        <h4 class="">Matricula</h4>
                    </div>
                    <div class=" col-md-1 border border-dark border-3">
                        <h4 class="">Situação</h4>
                    </div>
                    <div class=" col-md-1 border border-dark border-3">
                        <h4 class="">CPF</h4>
                    </div>
                    <div class=" col-md-1 border border-dark border-3">
                        <h4 class="">Nome Mãe</h4>
                    </div>
                    <div class=" col-md-1 border border-dark border-3">
                        <h4 class="">Curso</h4>
                    </div>
                    <div class=" col-md-2 border border-dark border-3">
                        <h4 class="">Nascimento</h4>
                    </div>
                    <div class="col-md-2 border border-dark border-3">
                        <h4 class="">Observações</h4>
                    </div>
                </div>

            </div>

            @*<div class="col-md-12">
                @Html.Label(GlobalMessages.Nome)
                @Html.TextBoxFor(x => x.Nome, null, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="col-md-12 col-md-offset-1">
                @Html.Label(GlobalMessages.Sobrenome)
                @Html.TextBoxFor(x => x.Sobrenome, null, new { @class = "form-control", disabled = "disabled" })
            </div>*@

        </form>
    </div>
</div>

 @*ModalIncluir    ModalINCLUIR*@

<div class="modal " tabindex="-1" role="dialog" id="meuModal">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="fecharModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="row modal-body">

                <div class="col-3">
                    <label>Nome</label>
                    <input id="nomeModal" class="align-content-center" />
                </div>
                <div class="col-3">
                    <label>Matricula</label>
                    <input id="matriculaModal" />
                </div>
                <div class="col-3">
                    <label>Situação</label>
                    <select class="form-select col-3" aria-label="Default select example" id="situacaoModal">
                        <option selected value="">Selecione</option>
                        <option value="@TreinamentoWeb.Enum.SituacaoTipo.Ativo">Ativo</option>
                        <option value="@TreinamentoWeb.Enum.SituacaoTipo.Suspenso">Suspenso</option>
                        <option value="@TreinamentoWeb.Enum.SituacaoTipo.Cancelado">Cancelado</option>
                    </select>
                </div>
                <div class="col-3">
                    <label>CPF</label>
                    <input id="cpfModal" onkeypress="$(this).mask('000.000.000-00');" />

                </div>
                <div class="col-4">
                    <label>Nome Mãe</label>
                    <input id="nomeMaeModal" />
                </div>
                <div class="col-4">
                    <label>Curso</label>
                    <select class="form-select" aria-label="Default select example" id="cursoModal">
                        <option selected value="">Selecione</option>
                        <option value="@TreinamentoWeb.Enum.CursoTipo.Matematica">Java</option>
                        <option value="@TreinamentoWeb.Enum.CursoTipo.Fisica">Javascript</option>
                        <option value="@TreinamentoWeb.Enum.CursoTipo.Biologia">Csharp</option>
                        <option value="@TreinamentoWeb.Enum.CursoTipo.Historia">Php</option>
                        <option value="@TreinamentoWeb.Enum.CursoTipo.Geografia">Delphi</option>
                    </select>
                </div>
                <div class="col-4">
                    <label>Data Nascimento</label>
                    <input id="dataNascimentoModal" onkeypress="$(this).mask('00/00/0000')" />
                </div>
                <div class="col-12 row ms-1">
                    <label>Observações</label>
                    <textarea id="obsModal" class=""></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="salvarModal btn btn-primary" onclick="SalvarModal()">Salvar Alterações</button>
                <button type="button" class="fecharModal btn btn-secondary" data-dismiss="modal" onclick="fecharModal()">Fechar</button>
            </div>
        </div>
    </div>
</div>

